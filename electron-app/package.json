{
  "name": "clipboard-sync-electron",
  "version": "1.0.0",
  "description": "Electron desktop application for clipboard synchronization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "keywords": ["clipboard", "sync", "electron", "desktop"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.1.3",
    "@vue/test-utils": "^2.4.6"
  },
  "dependencies": {
    "vue": "^3.5.21",
    "axios": "^1.12.2"
  },
  "build": {
    "appId": "com.clipboardsync.electron",
    "productName": "Clipboard Sync",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ]
  }
}
