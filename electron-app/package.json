{
  "name": "clipboard-sync-electron",
  "version": "1.0.0",
  "description": "Electron desktop application for clipboard synchronization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "native-host": "electron . --native-host",
    "install-native-host": "node scripts/install-native-host.js"
  },
  "keywords": [
    "clipboard",
    "sync",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.clipboardsync.electron",
    "productName": "Clipboard Sync",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "files": [
      "main.js",
      "preload.js",
      "native-host.js",
      "scripts/install-native-host.js",
      "renderer/**/*",
      "node_modules/**/*"
    ]
  }
}
