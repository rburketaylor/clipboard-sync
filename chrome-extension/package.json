{
  "name": "clipboard-sync-extension",
  "version": "1.0.0",
  "description": "Chrome extension for clipboard synchronization",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest run",
    "test:ui": "vitest",
    "lint": "eslint 'src/**/*.{ts,vue}'",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "mock:backend": "node scripts/mock-backend.cjs",
    "zip": "npm run build && cd dist && zip -r ../clipboard-sync-extension.zip ."
  },
  "keywords": ["clipboard", "sync", "chrome", "extension"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vite": "^4.4.9",
    "@vitejs/plugin-vue": "^4.3.4",
    "@crxjs/vite-plugin": "^2.2.0",
    "typescript": "^5.5.4",
    "@types/node": "^20.11.30",
    "vitest": "^1.6.0",
    "jsdom": "^24.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "eslint-plugin-vue": "^9.23.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "@vue/test-utils": "^2.4.1",
    "@types/chrome": "^0.0.245"
  },
  "dependencies": {
    "vue": "^3.3.4"
  }
}
