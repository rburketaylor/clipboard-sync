{
  "name": "clipboard-sync-extension",
  "version": "1.0.0",
  "description": "Chrome extension for clipboard synchronization",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest run",
    "test:ui": "vitest",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "mock:backend": "node scripts/mock-backend.cjs",
    "zip": "npm run build && cd dist && zip -r ../clipboard-sync-extension.zip ."
  },
  "keywords": ["clipboard", "sync", "chrome", "extension"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vite": "^7.1.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@crxjs/vite-plugin": "^2.2.0",
    "typescript": "^5.9.2",
    "@types/node": "^24.5.0",
    "vitest": "^3.2.4",
    "jsdom": "^27.0.0",
    "eslint": "^9.35.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "eslint-plugin-vue": "^10.4.0",
    "vue-eslint-parser": "^10.2.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "jest": "^30.1.3",
    "@vue/test-utils": "^2.4.6",
    "@types/chrome": "^0.1.11"
  },
  "dependencies": {
    "vue": "^3.5.21"
  }
}
