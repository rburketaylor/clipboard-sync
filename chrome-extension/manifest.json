{
  "manifest_version": 3,
  "name": "Clipboard Sync",
  "description": "Capture selected text or URLs and send to your desktop app/backend.",
  "version": "0.1.0",
  "minimum_chrome_version": "114",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Clipboard Sync"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "nativeMessaging"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self'"
  }
}
